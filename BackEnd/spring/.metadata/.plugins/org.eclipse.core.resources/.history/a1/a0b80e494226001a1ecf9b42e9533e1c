package com.cpg.empspringmvc.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Service;

import com.cpg.empspringmvc.bean.EmployeeAddressBean;
import com.cpg.empspringmvc.bean.EmployeeBean;
import com.cpg.empspringmvc.dao.EmployeeDao;

@Service
public class EmployeeServiceImpl implements EmployeeServices{

	@Autowired
	private EmployeeDao dao;
	
	BCryptPasswordEncoder encoder=new BCryptPasswordEncoder();
	
	@Override
	public EmployeeBean auth(String email, String password) {
		return dao.auth(email, encoder.(password));
	}

	@Override
	public boolean register(EmployeeBean bean) {
		
		String encodedPassword = encoder.encode(bean.getPassword());
		bean.setPassword(encodedPassword);
		
		List<EmployeeAddressBean> addressBeans=bean.getAddressBeans();
		for(EmployeeAddressBean employeeAddressBean:addressBeans) {
			employeeAddressBean.setBean(bean);
		}
		return dao.register(bean);
	}

	@Override
	public List<EmployeeBean> getEmployees(String Key) {
		return dao.getEmployees(Key);
	}

	@Override
	
	public boolean changePassword(int id, String password) {
		return dao.changePassword(id, password);
	}

}
